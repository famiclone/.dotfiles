# ncmpcpp bindings
# Docs in /usr/share/doc/ncmpcpp

def_key "h"
    previous_column
def_key "l"
    next_column
def_key "j"
    scroll_down
def_key "k"
    scroll_up

def_key "u"
    page_up
def_key "d"
    page_down
def_key "ctrl-u"
    page_up
def_key "ctrl-d"
    page_down

def_key "G"
    move_end
def_key "g"
    move_home

def_key "l"
    enter_directory
def_key "l"
    run_action
def_key "l"
    play_item

def_key "U"
    update_database

def_key "v"
    show_visualizer
def_key "m"
    show_media_library
def_key "P"
    show_playlist
def_key "x"
    delete_playlist_items
def_key "X"
    clear_main_playlist

def_key "s"
    show_search_engine
def_key "s"
    reset_search_engine

def_key "n"
    next_found_item
def_key "N"
    previous_found_item

# Disable keys
def_key "right"
    dummy
def_key "left"
    dummy
def_key "+"
    dummy
def_key "-"
    dummy
def_key "up"
    dummy
def_key "shift-up"
    dummy
def_key "down"
    dummy
def_key "shift-down"
    dummy
